{
	"builders": [
	  {
		"communicator": "winrm",
		"floppy_files": [
		  "windows-10/Autounattend.xml"
		],
		"format": "ova",
		"guest_additions_mode": "{{ user `guest_additions_mode` }}",
		"guest_additions_path": "C:/users/vagrant/VBoxGuestAdditions.iso",
		"guest_os_type": "Windows10_64",
        "headless": "{{ user `headless` }}",
		"iso_checksum": "sha1:{{ user `iso_checksum` }}",
		"iso_url": "{{ user `iso_url` }}",
		"output_directory": "builds/packer-{{user `template`}}-virtualbox",
		"shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
		"shutdown_timeout": "15m",
		"type": "virtualbox-iso",
		"vboxmanage": [
		  [
			"modifyvm",
			"{{.Name}}",
			"--memory",
			"2048"
		  ],
		  [
			"modifyvm",
			"{{.Name}}",
			"--vram",
			"36"
		  ],
		  [
			"modifyvm",
			"{{.Name}}",
			"--cpus",
			"2"
		  ]
		],
		"winrm_password": "vagrant",
		"winrm_timeout": "12h",
		"winrm_username": "vagrant"
	  }
	],
	"post-processors": [
	  [
		{
		  "keep_input_artifact": true,
		  "output": "{{ user `template` }}-{{.Provider}}.box",
		  "type": "vagrant",
		  "vagrantfile_template": "vagrantfile-windows.template"
		}
	  ]
	],
	"provisioners": [
	  {
		"elevated_password": "vagrant",
		"elevated_user": "vagrant",
		"scripts": [
		  "ansible-scripts-requirements/ConfigureRemotingForAnsible.ps1",
		  "ansible-scripts-requirements/Upgrade-PowerShell.ps1",
		  "ansible-scripts-requirements/chocolatey-install.ps1"
		],
		"type": "powershell"
	  }
	],
	"variables": {
	  "guest_additions_mode": "attach",
      "headless": "true",
	  "iso_checksum": "56ab095075be28a90bc0b510835280975c6bb2ce",
	  "iso_url": "http://download.microsoft.com/download/C/3/9/C399EEA8-135D-4207-92C9-6AAB3259F6EF/10240.16384.150709-1700.TH1_CLIENTENTERPRISEEVAL_OEMRET_X64FRE_EN-US.ISO",
	  "template": "windows-10"
	}
}
