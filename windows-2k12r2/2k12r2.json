{
	"builders": [
	  {
		"communicator": "winrm",
		"floppy_files": [
		  "windows-2k12r2/Autounattend.xml"
		],
		"format": "ova",
		"guest_additions_mode": "{{ user `guest_additions_mode` }}",
		"guest_additions_path": "C:/users/vagrant/VBoxGuestAdditions.iso",
		"guest_os_type": "Windows2012_64",
		"headless": "{{ user `headless` }}",
		"iso_checksum": "sha1:{{ user `iso_checksum` }}",
		"iso_url": "{{ user `iso_url` }}",
		"output_directory": "builds/packer-{{user `template`}}-virtualbox",
		"shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
		"shutdown_timeout": "15m",
		"type": "virtualbox-iso",
		"vboxmanage": [
		  [
			"modifyvm",
			"{{.Name}}",
			"--memory",
			"4096"
		  ],
		  [
			"modifyvm",
			"{{.Name}}",
			"--vram",
			"48"
		  ],
		  [
			"modifyvm",
			"{{.Name}}",
			"--cpus",
			"2"
		  ]
		],
		"winrm_password": "vagrant",
		"winrm_timeout": "12h",
		"winrm_username": "vagrant"
	  }
	],
	"post-processors": [
	  [
		{
		  "keep_input_artifact": true,
		  "output": "{{ user `template` }}-{{.Provider}}.box",
		  "type": "vagrant",
		  "vagrantfile_template": "vagrantfile-windows.template"
		}
	  ]
	],
	"provisioners": [
	  {
		"type": "powershell",
		"inline": [
		  "Set-ExecutionPolicy -ExecutionPolicy Unrestricted -Force -Scope LocalMachine",
		  "Set-ExecutionPolicy -ExecutionPolicy Unrestricted -Force -Scope CurrentUser",
		  "Set-ExecutionPolicy -ExecutionPolicy Unrestricted -Force -Scope Process"
		]
	  },
	  {
		"elevated_password": "vagrant",
		"elevated_user": "vagrant",
		"scripts": [
		  "ansible-scripts-requirements/ConfigureRemotingForAnsible.ps1",
		  "ansible-scripts-requirements/Upgrade-PowerShell.ps1",
		  "ansible-scripts-requirements/chocolatey-install.ps1"
		],
		"type": "powershell"
	  },
	  {
		"type": "windows-restart"
	  }
	],
	"variables": {
	  "guest_additions_mode": "attach",
	  "headless": "true",
	  "iso_checksum": "849734f37346385dac2c101e4aacba4626bb141c",
	  "iso_url": "http://download.microsoft.com/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.17050.WINBLUE_REFRESH.140317-1640_X64FRE_SERVER_EVAL_EN-US-IR3_SSS_X64FREE_EN-US_DV9.ISO",
	  "template": "windows-2012r2-standard"
	}
}
